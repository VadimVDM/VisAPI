# VisAPI Environment Variables
# Copy to .env.local and update with your values

# =============================================================================
# FRONTEND (.env.local)
# =============================================================================

# Development
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_ENV=development

# Production (app.visanet.app)
# NEXT_PUBLIC_API_URL=https://api.visanet.app
# NEXT_PUBLIC_ENV=production

# Supabase (same for dev/prod)
NEXT_PUBLIC_SUPABASE_URL=https://[project-id].supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key

# =============================================================================
# BACKEND (.env.local)
# =============================================================================

NODE_ENV=development
PORT=3000

# Local Development
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/visapi_dev
REDIS_URL=redis://localhost:6379
CORS_ORIGIN=http://localhost:3001
JWT_SECRET=generate_a_secure_secret_here

# Production (api.visanet.app)
# NODE_ENV=production
# DATABASE_URL=postgresql://postgres:[password]@db.[project-id].supabase.co:5432/postgres
# REDIS_URL=rediss://default:[password]@[host].upstash.io:6379
# CORS_ORIGIN=https://app.visanet.app

# =============================================================================
# SHARED SERVICES
# =============================================================================

# Supabase Service Role (Backend only)
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Email Domains (comma-separated)
ALLOWED_EMAIL_DOMAINS=visanet.app,visanet.co,visanet.co.il

# Security
API_RATE_LIMIT_BURST=200
API_RATE_LIMIT_SUSTAINED=2
API_KEY_PREFIX=visapi_
API_KEY_EXPIRY_DAYS=90

# =============================================================================
# DEPLOYMENT PLATFORMS
# =============================================================================

# Frontend: Vercel
# - URL: https://app.visanet.app
# - Set environment variables in Vercel dashboard

# Backend: Render
# - URL: https://api.visanet.app
# - Health check: /api/v1/healthz
# - Set environment variables in Render dashboard

# =============================================================================
# QUICK START
# =============================================================================

# 1. Copy this file: cp .env.example .env.local
# 2. Get Supabase credentials from: https://supabase.com/dashboard
# 3. Get Upstash Redis from: https://upstash.com/
# 4. Generate JWT secret: openssl rand -base64 32
# 5. Run locally: pnpm dev