# Worker Service Environment Variables Template
# Copy this to Railway Worker service configuration

# Core Settings
NODE_ENV=production
LOG_LEVEL=info
LOG_FORMAT=json

# Redis (use Railway's Redis variables)
REDIS_URL=${{Redis.REDIS_URL}}
REDIS_PUBLIC_URL=${{Redis.REDIS_PUBLIC_URL}}

# Database (copy from API service)
DATABASE_URL=

# Supabase (copy from API service)
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_ANON_KEY=
SUPABASE_STORAGE_BUCKET=visapi-files

# PDF Generation
PDF_TIMEOUT=30000
PDF_MAX_PAGES=50
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser

# Queue Processing
QUEUE_CONCURRENCY=10
QUEUE_MAX_RETRIES=3
QUEUE_RETRY_DELAY=5000

# Email (copy from API if needed)
RESEND_API_KEY=
RESEND_FROM_EMAIL=
NOREPLY_EMAIL=

# Slack (copy from API if needed)
SLACK_ENABLED=
SLACK_WEBHOOK_URL=
SLACK_BOT_TOKEN=
SLACK_DEFAULT_CHANNEL=

# Node.js Runtime
NIXPACKS_NODE_VERSION=22
NODE_OPTIONS=--max-old-space-size=2048